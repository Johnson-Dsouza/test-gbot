{
  "compilerOptions": {
    "lib": ["es6"],
    "types": ["node"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "target": "es2020",
    "baseUrl": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": ["src/**/*", "index.ts", "listeners"]
}

